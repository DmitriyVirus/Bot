{
  "version": 2,
  "builds": [
    { "src": "api/bot.py", "use": "@vercel/python" }
  ],
  "routes": [
    { "src": "/api/bot", "dest": "/api/bot.py" },
    { "src": "/favicon.png", "dest": "/static/favicon.png" },
    { "src": "/(.*)", "dest": "/api/bot.py" }
  ]
  "crons": [
    {
      "path": "/api/bot/cron1",
      "schedule": "0 6 * * 1-5",
      "timezone": "Europe/Kiev"
    },
    {
      "path": "/api/bot/cron2",
      "schedule": "0 14 * * 5",
      "timezone": "Europe/Kiev"
    }
  ]
}
